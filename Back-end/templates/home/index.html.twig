{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<!-- Navbar -->
<nav class="fixed w-full bg-white shadow-lg z-50 border-b border-gray-200">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <a href="#" class="flex items-center">
      <img src="/logo.png" alt="Coach Ibra Logo" class="h-12 w-12 rounded-full mr-2 object-cover" onerror="this.src='https://api.dicebear.com/7.x/avataaars/svg?seed=coach-ibra'" />
      <span class="text-xl font-bold text-gray-900">Coach Ibra</span>
    </a>
    <div class="hidden md:flex items-center space-x-6">
      <a href="#" class="text-gray-800 hover:text-blue-700 font-medium transition-colors">Accueil</a>
      <a href="#services" class="text-gray-800 hover:text-blue-700 font-medium transition-colors">Services</a>
      <a href="#schedule" class="text-gray-800 hover:text-blue-700 font-medium transition-colors">Planning</a>
      <a href="#testimonials" class="text-gray-800 hover:text-blue-700 font-medium transition-colors">Témoignages</a>
      <a href="#contact" class="text-gray-800 hover:text-blue-700 font-medium transition-colors">Contact</a>
      <a href="/admin" class="text-gray-800 hover:text-blue-700 font-medium transition-colors">Admin</a>
      <a href="{{ path('app_login') }}" class="ml-4 px-4 py-2 border border-blue-700 text-blue-700 font-semibold rounded hover:bg-blue-700 hover:text-white transition">Se connecter</a>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<section class="relative flex items-center justify-center min-h-screen w-full bg-black" style="background-image: url('/images/hero-bg.jpg'); background-size: cover; background-position: center; padding-top: 80px;">
  <div class="absolute inset-0 bg-black/60"></div>
  <div class="relative z-10 flex flex-col items-center justify-center text-center text-white py-16 px-4 w-full" style="max-width: 600px; margin: 0 auto;">
    <h1 class="mb-4 text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight drop-shadow-lg">Coach Ibra Fitness</h1>
    <p class="mb-8 text-lg md:text-xl lg:text-2xl font-medium italic drop-shadow-md">Votre transformation commence ici.</p>
    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <a href="#personal-training" class="px-6 py-3 bg-red-700 hover:bg-red-800 text-white font-semibold rounded-lg text-lg transition">Personal Training</a>
      <a href="#group-classes" class="px-6 py-3 border border-white text-white bg-black/40 hover:bg-white/20 font-semibold rounded-lg text-lg transition">Group Classes</a>
      <a href="#kids-program" class="px-6 py-3 border border-white text-white bg-black/40 hover:bg-white/20 font-semibold rounded-lg text-lg transition">Kids Program</a>
    </div>
  </div>
  <div class="absolute bottom-0 left-0 h-2 w-full bg-gradient-to-r from-red-600 via-red-500 to-orange-500"></div>
</section>

<!-- Services Section -->
<section id="services" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-10 text-center text-blue-700">Nos Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <h3 class="text-xl font-semibold mb-2">Coaching Personnel</h3>
        <p class="text-gray-500">Un accompagnement sur-mesure pour atteindre vos objectifs.</p>
      </div>
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <h3 class="text-xl font-semibold mb-2">Cours Collectifs</h3>
        <p class="text-gray-500">Des séances dynamiques en groupe pour se motiver ensemble.</p>
      </div>
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <h3 class="text-xl font-semibold mb-2">Programme Enfants</h3>
        <p class="text-gray-500">Des activités adaptées pour les plus jeunes.</p>
      </div>
    </div>
  </div>
</section>

<!-- Planning Section -->
<section id="schedule" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-10 text-center text-blue-700">Planning</h2>
    <div class="bg-gray-50 rounded-lg shadow-md p-8">
      <p class="text-center text-gray-500 mb-0">Consultez le planning des cours et réservez votre place.</p>
      <!-- Placeholder for calendar or schedule table -->
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-10 text-center text-blue-700">Témoignages</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 justify-center">
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <blockquote class="italic text-gray-500 mb-4">"Coach Ibra m'a aidé à transformer ma vie!"</blockquote>
        <span class="font-semibold text-blue-700">- Alice</span>
      </div>
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <blockquote class="italic text-gray-500 mb-4">"Des cours variés et une super ambiance."</blockquote>
        <span class="font-semibold text-blue-700">- Karim</span>
      </div>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-16 bg-white">
  <div class="max-w-xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-10 text-center text-blue-700">Contact</h2>
    <form class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium mb-1">Nom</label>
        <input type="text" id="name" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Votre nom" required>
      </div>
      <div>
        <label for="email" class="block text-sm font-medium mb-1">Email</label>
        <input type="email" id="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Votre email" required>
      </div>
      <div>
        <label for="message" class="block text-sm font-medium mb-1">Message</label>
        <textarea id="message" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Votre message" required></textarea>
      </div>
      <button type="submit" class="w-full py-3 bg-blue-700 hover:bg-blue-800 text-white font-semibold rounded-lg transition">Envoyer</button>
    </form>
  </div>
</section>

<!-- Footer -->
