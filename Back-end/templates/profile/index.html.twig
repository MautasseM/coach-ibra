{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card p-5 shadow" style="max-width: 600px; width: 100%;">
            <h1 class="text-center mb-4">Mon Profil</h1>

            {# Messages flash en haut du formulaire #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center mb-3">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger text-center mb-3">{{ message }}</div>
            {% endfor %}

            <form method="post" class="needs-validation" novalidate>
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.email, {'attr': {'class': 'form-text text-muted'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.firstName, {'attr': {'class': 'form-text text-muted'}}) }}
                    {{ form_errors(form.firstName) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.lastName, {'attr': {'class': 'form-text text-muted'}}) }}
                    {{ form_errors(form.lastName) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.phone, {'attr': {'class': 'form-text text-muted'}}) }}
                    {{ form_errors(form.phone) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.plainPassword, {'attr': {'class': 'form-text text-muted'}}) }}
                    {{ form_errors(form.plainPassword) }}
                </div>

                <div class="d-grid gap-2 mb-4"> {# Added mb-4 for spacing before "Retour à l'accueil" #}
                    <button type="submit" class="btn btn-primary btn-lg">Mettre à jour mon profil</button>
                </div>

                <div class="text-center"> {# Removed mt-4 from here #}
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                </div>

                {{ form_end(form) }} {# Moved form_end to the very end of the form #}

        </div>
    </div>
{% endblock %}